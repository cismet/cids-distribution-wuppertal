<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>de.cismet.cids.custom.wuppertal.distribution</groupId>
        <artifactId>wuppertal-distribution</artifactId>
        <version>7.1-SNAPSHOT</version>
        <relativePath>../pom.xml</relativePath>
    </parent>
    
    <!--
        This is the autodistribution module for the wunda-navigator deployment
        module (cids.custom-wunda + cismap-plugin). 

        This aertifact is *not* installed to the maven repository!
        Its sole purpose is to generate / update an autodistribution that is
        based on wunda-navigator deployment module
    -->
    <artifactId>getdown-wunda-dk-standalone-x</artifactId>
    <packaging>pom</packaging>

    <properties>
    </properties>

    <!--
        IMPORTANT: For the cids-maven plugin to work properly there 
        is excatly *one* dependecy to the deployment module specified!
        
        Use the parent properties project.groupId and project.version!
    -->
    <dependencies>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>local-default</artifactId>
            <version>${project.version}</version>
            <type>pom</type>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>deployment-wunda-navigator</artifactId>
            <version>${project.version}</version>
            <type>pom</type>
        </dependency>
    </dependencies>
    
    <!--
        Specify the cids-maven-plugin:generate-lib in the build/plugins section.
        Other plugins are executed based on parent's  build/plugins and
        build/pluginManagement sections, respectively, as well as on active build 
        profiles (See <profiles> section!)
    -->      
    <build>
        <plugins>
            <plugin>			
                <groupId>io.github.rockfireredmoon</groupId>
                <artifactId>getdown-maven-plugin</artifactId>
                <version>0.9.1</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>updates</goal>
                        </goals>
                        <configuration>
                            <appbase>${de.cismet.cidsCodebase}/apps/cismap-x</appbase>
                            <libPath>../.libs</libPath>
                            <mainClass>Sirius.navigator.NavigatorX</mainClass>
                            <outputJarVersions>true</outputJarVersions>
                            <verbose>false</verbose>
                            <appargs>
                                <argument>${de.cismet.cidsCodebase}/client/${de.cismet.cidsAccountExtension}/config/wundadk.cfg</argument>
                            </appargs>
                            <jvmargs>
                                <jvmarg>-Duser.country=DE</jvmarg>
                                <jvmarg>-Duser.language=de</jvmarg>
                                <jvmarg>-Djnlp.intranetUse=true</jvmarg> 
                                <jvmarg>-Djnlp.directory.extension=DK</jvmarg>
                                <jvmarg>-Djnlp.menuConfigFile=/Sirius/navigator/standalone/MenuConfig.json</jvmarg>
                                <jvmarg>-Djnlp.defaultLayout=/Sirius/navigator/standalone/defaultLayout.layout</jvmarg>
                                <jvmarg>-Djnlp.titleName=/Sirius/navigator/standalone/titleNames.properties</jvmarg>
                                <jvmarg>-Djnlp.allowedWindows=/Sirius/navigator/standalone/windows.json</jvmarg>
                                <jvmarg>-Djnlp.username=anonymous</jvmarg>
                                <jvmarg>-Djnlp.password=pwdForAnonymous</jvmarg>
                                <jvmarg>-Djnlp.userDomain=WUNDA_BLAU</jvmarg>
                                <jvmarg>-Xms512M</jvmarg>
                                <jvmarg>-Xmx1024M</jvmarg>
                                <jvmarg>-XX:MaxPermSize=128m</jvmarg>
                            </jvmargs>
                            <ui>
                                <name>WuNDa DK X (cismap) v${project.version}</name>
                            </ui>
                        </configuration>
                    </execution>
                </executions>
            </plugin>            
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
                <version>3.0.2</version>
                <executions>
                    <execution>
                        <id>copy-app</id>
                        <phase>install</phase>
                        <goals><goal>copy-resources</goal></goals>
                        <configuration>
                            <resources>
                                <resource>
                                    <directory>${basedir}/target/getdown</directory>
                                </resource>
                            </resources>
                            <outputDirectory>${de.cismet.cidsDistDir}/apps/cismap-x/</outputDirectory>
                        </configuration>                        
                    </execution>
                    <execution>
                        <id>copy-libs</id>
                        <phase>install</phase>
                        <goals><goal>copy-resources</goal></goals>
                        <configuration>
                            <resources>
                                <resource>
                                    <directory>${basedir}/target/.libs</directory>
                                </resource>
                            </resources>
                            <outputDirectory>${de.cismet.cidsDistDir}/apps/.libs/</outputDirectory>
                        </configuration>                        
                    </execution>
                </executions>
            </plugin>            
        </plugins>
    </build>
    <name>getdown-wunda-dk-standalone-x</name>
</project>