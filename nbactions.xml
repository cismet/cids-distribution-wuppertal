<?xml version="1.0" encoding="UTF-8"?>
<actions>
    <action>
        <actionName>build</actionName>
        <packagings>
            <packaging>*</packaging>
        </packagings>
        <goals>
            <goal>install</goal>
        </goals>
        <properties>
            <cids-distribution.skip>true</cids-distribution.skip>
        </properties>
        <activatedProfiles>
            <activatedProfile>netbeans-fastbuild</activatedProfile>
        </activatedProfiles>
    </action>
    <action>
        <actionName>clean</actionName>
        <packagings>
            <packaging>*</packaging>
        </packagings>
        <goals>
            <goal>clean</goal>
        </goals>
        <properties>
            <cids-distribution.skip>true</cids-distribution.skip>
        </properties>
        <activatedProfiles>
            <activatedProfile>netbeans-fastbuild</activatedProfile>
        </activatedProfiles>
    </action>
    <action>
        <actionName>test</actionName>
        <packagings>
            <packaging>*</packaging>
        </packagings>
        <properties>
            <cids-distribution.skip>true</cids-distribution.skip>
        </properties>
        <goals>
            <goal>test</goal>
        </goals>
        <activatedProfiles>
            <activatedProfile>netbeans-fastbuild-test</activatedProfile>
        </activatedProfiles>
    </action>
    <action>
        <actionName>test.single</actionName>
        <packagings>
            <packaging>*</packaging>
        </packagings>
        <goals>
            <goal>test-compile</goal>
            <goal>surefire:test</goal>
        </goals>
        <properties>
            <test>${packageClassName}</test>
            <cids-distribution.skip>true</cids-distribution.skip>
        </properties>
        <activatedProfiles>
            <activatedProfile>netbeans-fastbuild-test</activatedProfile>
        </activatedProfiles>
    </action>
    <action>
        <actionName>run.single.main</actionName>
        <packagings>
            <packaging>*</packaging>
        </packagings>
        <goals>
            <goal>process-classes</goal>
            <goal>org.codehaus.mojo:exec-maven-plugin:exec</goal>
        </goals>
        <properties>
            <exec.args>-classpath %classpath ${packageClassName}</exec.args>
            <exec.executable>java</exec.executable>
            <exec.classpathScope>${classPathScope}</exec.classpathScope>
            <cids-distribution.skip>true</cids-distribution.skip>
        </properties>
        <activatedProfiles>
            <activatedProfile>netbeans-fastbuild</activatedProfile>
        </activatedProfiles>
    </action>
    <action>
        <actionName>debug.single.main</actionName>
        <packagings>
            <packaging>*</packaging>
        </packagings>
        <goals>
            <goal>process-classes</goal>
            <goal>org.codehaus.mojo:exec-maven-plugin:exec</goal>
        </goals>
        <properties>
            <exec.args>-Xdebug -Xrunjdwp:transport=dt_socket,server=n,address=${jpda.address} -classpath %classpath ${packageClassName}</exec.args>
            <exec.executable>java</exec.executable>
            <exec.classpathScope>${classPathScope}</exec.classpathScope>
            <jpda.listen>true</jpda.listen>
            <cids-distribution.skip>true</cids-distribution.skip>
        </properties>
        <activatedProfiles>
            <activatedProfile>netbeans-fastbuild</activatedProfile>
        </activatedProfiles>
    </action>
    <action>
        <actionName>debug.test.single</actionName>
        <packagings>
            <packaging>*</packaging>
        </packagings>
        <goals>
            <goal>test-compile</goal>
            <goal>surefire:test</goal>
        </goals>
        <properties>
            <test>${packageClassName}</test>
            <forkMode>once</forkMode>
            <maven.surefire.debug>-Xdebug -Xrunjdwp:transport=dt_socket,server=n,address=${jpda.address}</maven.surefire.debug>
            <jpda.listen>true</jpda.listen>
            <cids-distribution.skip>true</cids-distribution.skip>
        </properties>
        <activatedProfiles>
            <activatedProfile>netbeans-fastbuild-test</activatedProfile>
        </activatedProfiles>
    </action>
    <action>
        <actionName>profile.single.main</actionName>
        <packagings>
            <packaging>*</packaging>
        </packagings>
        <goals>
            <goal>process-classes</goal>
            <goal>org.codehaus.mojo:exec-maven-plugin:exec</goal>
        </goals>
        <properties>
            <exec.args>-classpath %classpath ${packageClassName}</exec.args>
            <exec.executable>java</exec.executable>
            <exec.classpathScope>${classPathScope}</exec.classpathScope>
            <cids-distribution.skip>true</cids-distribution.skip>
        </properties>
        <activatedProfiles>
            <activatedProfile>netbeans-fastbuild</activatedProfile>
        </activatedProfiles>
    </action>
    <action>
        <actionName>javadoc</actionName>
        <packagings>
            <packaging>*</packaging>
        </packagings>
        <goals>
            <goal>generate-sources</goal>
            <goal>javadoc:javadoc</goal>
        </goals>
        <properties>
            <cids-distribution.skip>true</cids-distribution.skip>
        </properties>
        <activatedProfiles>
            <activatedProfile>netbeans-fastbuild</activatedProfile>
        </activatedProfiles>
    </action>
    <action>
        <actionName>CUSTOM-build-autodistributions</actionName>
        <displayName>Build all Autodistribution Modules</displayName>    
        <packagings>
            <packaging>*</packaging>
        </packagings>
        <properties>
            <!--
                IMPORTANT IMPORTANT IMPORTANT IMPORTANT IMPORTANT IMPORTANT
                Plugins related to the creation of the autodistribution are
                are disabled by default! Enable them individually in the respective
                settings.xml profile or nbactions!
            -->
            <cids-distribution.skip>false</cids-distribution.skip>
        </properties>
        <goals>
            <goal>clean install</goal>
        </goals>
        <activatedProfiles>
            <activatedProfile>cismet-release</activatedProfile>
        </activatedProfiles>
    </action>
    <action>
        <actionName>CUSTOM-update-child-modules</actionName>
        <displayName>Update all Child Modules</displayName>
        <goals>
            <goal>versions:update-child-modules</goal>
        </goals>
        <properties>
            <cids-distribution.skip>true</cids-distribution.skip>
        </properties>
        <activatedProfiles>
            <activatedProfile>netbeans-fastbuild</activatedProfile>
        </activatedProfiles>
    </action>
</actions>
